<%= telemetry_warning %>

<div id="body-loading"></div>
<% content_for :navigation do %>
  <%= section t('views.layouts.action.home'), home_path, :home %>
  <% if account_signed_in? %>
    <% if params[:project_id].nil? %>
      <%= section t('views.layouts.action.projects'), projects_path, :projects, [:projects, :call_flows, :schedules, :resources, :external_services, :contacts, :feeds, :reminder_groups, :reminder_schedules, :pregnancy_reminders] %>
    <% else %>
      <%= section t('views.layouts.action.projects'), projects_path, :projects, [:projects, :call_flows, :schedules, :resources, :external_services, :contacts, :reminder_groups, :reminder_schedules, :pregnancy_reminders, :call_logs] %>
    <% end %>

    <% if current_account.admin? %>
      <%= section t('views.layouts.action.channels'), channels_path, :channels, [:channels, :nuntium_channels] %>
    <% end %>

    <% if params[:project_id].nil? %>
      <%= section t('views.layouts.action.calls'), call_logs_path, :call_logs %>
    <% else %>
      <%= section t('views.layouts.action.calls'), call_logs_path, nil %>
    <% end %>
    <%= section "Permissions", permissions_path, :permissions %>
  <% end %>
  <%= section t('views.layouts.action.help'), '/help', :help %>
<% end %>
<% content_for :right_menu do %>
  <ul class="RightMenu">
    <%- if account_signed_in? %>
      <li>
        <div id="User">
          <%=current_account.email%><br><br>
          <div class="container">
            <ul>
              <li><%= link_to t('views.layouts.action.settings'), guisso_settings_path(:account) %></li>
            </ul>
            <hr/>
            <ul>
              <li><a href="mailto:support@instedd.org?subject=[<%= application_name.underscore %>-bug]"><%=t('views.layouts.action.report_bug') %></a></li>
              <li><%= link_to t('views.layouts.action.sign_out'), guisso_sign_out_path_for(:account, after_sign_out_url: root_url), method: :delete %></li>
            </ul>
          </div>
        </div>
      </li>
      <li>
        <div id="alerts" class="alerts">
          <!-- ko if: alerts.length -->
          <span class="summary" data-bind="visible: alerts().length > 0, text: alerts().length"></span>
          <div class="box" data-bind="foreach: alerts">
            <div class="item" data-bind="click: $parent.open">
              <span data-bind="text: message"></span>
              <button class="farrow"></button>
            </div>
          </div>
          <!-- /ko -->
        </div>
      </li>
      <li>
        <%= link_to '', guisso_settings_path(:account), :class => 'fsettings' %>
      </li>
    <% else %>
      <li>
        <%= link_to t(Rails.configuration.verboice_configuration[:registration_account_label]), Rails.configuration.verboice_configuration[:registration_account_url], :class => 'fedit' %>
      </li>
      <li>
        <%= link_to t('views.layouts.action.log_in'), guisso_sign_in_path_for(:account), :class => 'fuser' %>
      </li>
    <% end %>
  </ul>
<% end %>
<% content_for :footer_links do %>
  <a href="<%= root_path %>"><%= t('views.layouts.action.home') %></a>
<% end %>
<%= render :file => 'layouts/instedd_application' %>
