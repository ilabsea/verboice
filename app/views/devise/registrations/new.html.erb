<div class="box centered w33">

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  
  <h2>Sign up</h2>

  <%= devise_error_messages! :class => 'centered w30' %>

  <hr class="shadow">

  <div class="field w33">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div class="field w33 account-form">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="field w33">
    <div id='validateMeter' style='height:5px; float:left;'></div>
    <p id='validateMessage' style='float:right;'></p>
  </div>

  <div class='clear'></div>

  <div class="field w33">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="field w33">
    <%= recaptcha_tags display: {theme: 'white'} %>
  </div>

  <div class="actions">
    <button type="submit" class="white">Sign up</button>
  </div>

<% end %>

<%= render :partial => "devise/shared/links" %>

</div>
